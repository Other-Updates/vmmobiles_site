            pagination: false,
            itemsDesktop : [1500,5],
            itemsDesktopSmall:[1199,4],
            itemsTablet :	[991,3],
            itemsTabletSmall : [543, 2],
            itemsMobile: [479, 2]
        });
    });	
</script>
